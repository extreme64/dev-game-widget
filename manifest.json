{
  "name": "Dev Game Widget",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Daly dev. life as a game.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "localStorage.js",
        "app.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://api.openai.com/; object-src 'self'"
}
