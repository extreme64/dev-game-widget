{
  "name": "Dev Game Widget",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Daly dev. life as a game.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1:5500/popup.html",
        "http://127.0.0.1:5500/index.html"
      ],
      "js": [
        "modal.js",
        "gameLogic.js",
        "localStorage.js",
        "app.js"
      ]
      ,
      "css": [
        "award-badges-sprites.css",
        "style.css"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://api.openai.com/; object-src 'self'"
}
