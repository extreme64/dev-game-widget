{
  "name": "Dev Game Widget",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Daly dev. life as a game.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1:5500/popup.html",
        "http://127.0.0.1:5500/index.html*",
        "http://127.0.0.1:5500/tests/index.html"
      ],
      "js": [
        "abilities.js",
        "badges.js",
        "modal.js",
        "gameLogic.js",
        "events.js",
        "localStorage.js",
        "utils.js",
        "app.js",
        "tests/testBadges.js",
        "tests/runAllTests.js"
      ]
      ,
      "css": [
        "badges.css",
        "abilities.css",
        "style.css"
      ]
    }
  ],
  "sandbox": {
    "pages": [
      "index.html",
      "tests/index.html"
    ]
  },
  "content_security_policy": "script-src  https://api.openai.com/ 'self'; object-src 'self'"
}
